@model IEnumerable<VSDOnline.Models.Video>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int counter = 0;
}

<div class="container bg-site">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Settings
                <small>Viswa Sai Dwarakamai</small>
            </h1>
            @if (Context.User.IsInRole("Admin"))
            {
                <ol class="breadcrumb">
                    <li>
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Settings", "Index", "Settings")
                    </li>
                    <li class="active">Videos</li>
                </ol>
            }
            else
            {
                <ol class="breadcrumb">
                    <li>
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li class="active">Videos</li>
                </ol>
            }
        </div>
    </div>
    <div class="row">
        @if (Context.User.IsInRole("Admin"))
        {
            <div class="col-md-2 col-lg-2">
                <div class="panel panel-primary">
                    <div class="panel-heading">Settings</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                                <ul>
                                    <li>
                                        @Html.ActionLink("Events", "Index", "Settings")
                                    </li>
                                    <li class="active">
                                        @Html.ActionLink("Videos", "Index", "Videos")
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="@(Context.User.IsInRole("Admin")?"col-md-10 col-lg-10" : "col-md-12 col-lg-112")">
            <div class="panel panel-primary">
                <div class="panel-heading">Videos</div>
                <div class="panel-body">
                    @if (Context.User.IsInRole("Admin"))
                    {
                        <div class="row">
                            <div class="col-md-12">
                                @Html.ActionLink("Create New", "Create")
                                <hr />
                            </div>
                        </div>
                    }
                    @foreach (var video in Model)
                    {

                        if (counter != 0 && counter % 3 == 0)
                        {
                            @:</div>
                        @:<div class="row">
                        }
                        <div class="col-sm-6 col-md-4">
                            <div class="thumbnail">
                                <a href="#">
                                    <div class="embed-responsive embed-responsive-16by9">
                                        <iframe class="embed-responsive-item" src="@video.Link"></iframe>
                                    </div>
                                </a>
                                <div class="caption">
                                    <h3>@video.Name</h3>
                                    <p>@video.Description</p>
                                    @if (Context.User.IsInRole("Admin"))
                                    {
                                        <p>
                                            @Html.ActionLink("Edit", "Edit", new { id = video.ID }) |
                                            @Html.ActionLink("Details", "Details", new { id = video.ID }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = video.ID })
                                        </p>
                                    }
                                </div>
                            </div>
                        </div>

                        counter++;
                    }
                </div>
